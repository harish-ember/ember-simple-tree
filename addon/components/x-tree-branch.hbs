<ul class="tree-branch">
  {{#each @model as |child|}}
    {{#if child.isVisible}}
      {{#if (has-block)}}
        <XTreeChildren
          @checkable={{@checkable}}
          @recursiveCheck={{@recursiveCheck}}
          @updateCheckbox={{@updateCheckbox}}
          @chosenId={{@chosenId}}
          @onCheck={{@onCheck}}
          @onContextMenu={{@onContextMenu}}
          @onSelect={{@onSelect}}
		      @onLoad={{@onLoad}}
          @onHover={{@onHover}}
          @onHoverOut={{@onHoverOut}}
          @model={{child}}
          @expandedIcon={{@expandedIcon}}
          @collapsedIcon={{@collapsedIcon}}
          as |node|
        >
          {{yield node}} 
		  
        </XTreeChildren>
      {{else}}
        <XTreeChildren
          @model={{child}}
          @checkable={{@checkable}}
          @recursiveCheck={{@recursiveCheck}}
          @updateCheckbox={{@updateCheckbox}}
          @chosenId={{@chosenId}}
          @onCheck={{@onCheck}}
          @onContextMenu={{@onContextMenu}}
          @onSelect={{@onSelect}}
		      @onLoad={{@onLoad}}
          @onHover={{@onHover}}
          @onHoverOut={{@onHoverOut}}
          @expandedIcon={{@expandedIcon}}
          @collapsedIcon={{@collapsedIcon}}
        />
      {{/if}}
    {{/if}}
  {{/each}}
{{#if @model.lastObject.hasNextPage }}
	<span class="x-tree-load-more" {{on "click" (fn this.args.onLoad @model.lastObject.parentObject)}} >+{{@model.lastObject.parentObject.loadingTriggerCount}} {{@model.lastObject.parentObject.loadMoreLabel}} </span>
 {{/if}}
</ul>
